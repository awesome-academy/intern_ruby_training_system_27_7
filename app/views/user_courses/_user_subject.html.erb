<div class="row">
  <div class="col py-2">
    <div class="card border-info subject-item">
      <div class="card-body">
        <div class="subject-image">
          <%= image_tag("america.jpg", class: "img-fluid img-square",
            alt: "subject_logo") %>
        </div>
        <div class="subject-info">
          <div class="text-success">
            <% if user_subject.pre_sub_finished? %>
              <button class="btn btn-sm btn-warning text-white">
                <i class="fa fa-clock"></i>
                <%= user_subject.current_start_time %>
                <i class="fa fa-arrow-right"></i>
                <%= user_subject.end_time %>
              </button>
            <% else %>
              <button class="btn btn-sm btn-warning text-white">
                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                <%= t ".not_start" %>
              </button>
            <% end %>
          </div>
          <h5 class="card-title text-success">
            <%= link_to "#" do %>
              <%= user_subject.course_subject_subject_name %>
            <% end %>
            <small>
              <%= t ".time" %>:
              <%= user_subject.course_subject_current_duration.day %>
              <%= t ".day" %>
            </small>
          </h5>
        </div>
        <div class="subject-actions">
          <div class="text-right">
            <%= link_to "#" do %>
              <div class="btn btn-primary btn-sm">
                <i class="fa fa-eye" aria-hidden="true">
                </i>
              </div>
            <% end %>
            <% if current_user.supervisor? || current_user.admin? %>
              <%= link_to "#", method: :delete,
                data: {confirm: t(".sure")} do %>
                <div class="btn btn-danger btn-sm">
                  <i class="fas fa-trash">
                  </i>
                </div>
              <% end %>
              <%= link_to "#" do %>
                <div class="btn btn-info btn-sm">
                  <i class="fa fa-pencil-alt">
                  </i>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
