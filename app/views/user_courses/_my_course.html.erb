<div class="col-sm-12 col-md-6 col-xl-4 mycourse-item">
  <div class="mycourse-wrapper">
    <div class="mycourse-img">
      <%= link_to user_course do %>
        <%=  image_tag("vietnam.jpg", class: "img-fluid img-square",
          alt: "Course picture") %>
      <% end %>
    </div>
    <div class="mycourse-content">
      <h4 class="my-2">
        <%= link_to user_course.course_name, user_course %>
      </h4>
      <p> <%= user_course.status %> </p>
    </div>
    <div class="mycourse-footer">
      <div class="mycourse-create" data-toggle="tooltip" data-placement="bottom"
        data-title="<%= t ".last_updated" %>">
        <i class="fas fa-sync"></i>
        <%= user_course.updated_at.strftime Settings.time_format %>
      </div>
    </div>
  </div>
</div>
