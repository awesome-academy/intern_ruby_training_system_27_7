<% if user_course.trainee? %>
<tr>
  <td>
    <%= link_to user_course.user_full_name, "#" %>
  </td>
  <td>
    <%= user_course.created_at.strftime(Settings.time_format) %>
  </td>
  <td>
    <%= user_course.status %>
  </td>
  <td class="project-actions text-right">
    <%= link_to "#" do %>
      <div class="btn btn-primary btn-sm">
        <i class="fa fa-eye" aria-hidden="true">
        </i>
      </div>
    <% end %>
    <% if current_user.supervisor? || current_user.admin? %>
      <%= link_to user_course, method: :delete, data: {confirm: t(".sure")} do %>
        <div class="btn btn-danger btn-sm">
          <i class="fas fa-trash">
          </i>
        </div>
      <% end %>
      <%= link_to "#" do %>
        <div class="btn btn-info btn-sm">
          <i class="fa fa-pencil-alt">
          </i>
        </div>
      <% end %>
    <% end %>
  </td>
</tr>
<% end %>
