<tr>
  <td>
    <%= user_report.date.strftime Settings.time_format %>
  </td>
  <td>
    <%= user_report.course_name %>
  </td>
  <td>
    <%= user_report.content %>
  </td>
  <td class="project-actions text-right">
    <%= link_to user_report do %>
      <div class="btn btn-primary btn-sm">
        <i class="fa fa-eye" aria-hidden="true">
        </i>
      </div>
    <% end %>
    <%= link_to user_report, method: :delete, data: {confirm: t(".sure")} do %>
      <div class="btn btn-danger btn-sm">
        <i class="fas fa-trash">
        </i>
      </div>
    <% end %>
    <%= link_to edit_user_report_path(user_report.id) do %>
      <div class="btn btn-info btn-sm">
        <i class="fa fa-pencil-alt">
        </i>
      </div>
    <% end %>
  </td>
</tr>
