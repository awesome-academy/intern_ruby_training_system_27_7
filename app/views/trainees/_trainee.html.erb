<tr>
  <td>
    <%= link_to trainee.full_name, user_path(trainee) %>
  </td>
  <td>
    <%= trainee.email %>
  </td>
  <td class="project-actions text-right">
    <%= link_to user_path(trainee) do %>
      <div class="btn btn-primary btn-sm">
        <i class="fa fa-eye" aria-hidden="true">
        </i>
      </div>
    <% end %>
    <% if current_user.supervisor? || current_user.admin? %>
      <%= link_to trainee_path(trainee), method: :delete, data: {confirm: t(".sure")} do %>
        <div class="btn btn-danger btn-sm">
          <i class="fas fa-trash">
          </i>
        </div>
      <% end %>
      <%= link_to edit_trainee_path(trainee) do %>
        <div class="btn btn-info btn-sm">
          <i class="fa fa-pencil-alt">
          </i>
        </div>
      <% end %>
    <% end %>
  </td>
</tr>
