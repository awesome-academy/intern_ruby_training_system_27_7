<div class="row">
  <div class="col py-2">
    <div class="card border-info subject-item">
      <div class="card-body">
        <div class="subject-image">
          <%= image_tag("america.jpg", class: "img-fluid img-square",
            alt: "subject_logo") %>
        </div>
        <div class="subject-info">
          <h5 class="card-title text-success">
            <%= link_to course_subject_task.name, "#" %>
          </h5>
          <br>
          <p class="card-title text-success">
            <%= course_subject_task.description %>
          </p>
        </div>
        <div class="subject-actions">
          <div class="text-right">
            <% if can? :manage, course_subject_task %>
              <%= link_to course_subject_task, method: :delete,  data: {confirm: t(".sure")} do %>
                <div class="btn btn-danger btn-sm">
                  <i class="fas fa-trash">
                  </i>
                </div>
              <% end %>
              <%= link_to "#" do %>
                <div class="btn btn-info btn-sm">
                  <i class="fa fa-pencil-alt">
                  </i>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
