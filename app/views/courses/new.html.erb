<% provide :title, t(".heading") %>

<section class="content-header">
  <h1><%= t ".heading" %></h1>
</section>

<section class="content container">
  <div class="card card-info">
    <div class="card-header">
      <h3><%= t "layouts.sidebar.new_course" %></h3>
    </div>
    <div class="card-body">
      <%= form_for @course do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :start_time %>
          <%= f.date_field :start_time,
            class: "form-control datetimepicker-input" %>
        </div>
        <div class="form-group">
          <%= f.label :subjects %>
          <%= f.select :subject_ids, @subjects.pluck(:name, :id),
           {include_blank: false,  include_hidden: false},
           {id: "chosen-subject", class: "form-control", multiple: "true"} %>
        </div>
        <%= f.submit t(".confirm"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</section>
