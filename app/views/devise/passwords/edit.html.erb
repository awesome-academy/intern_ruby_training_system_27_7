<% provide :title, t(".heading") %>
<section class="content-header">
  <h1><%= t ".heading" %></h1>
</section>

<section class="content container" id="login">
  <div class="card card-info">
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, t(".new_password") %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t ".minimum_length" %>)</em><br/>
        <% end %>
        <%= f.password_field :password, autofocus: true,
          autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t(".confirm_password") %><br />
        <%= f.password_field :password_confirmation,
        autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t(".change_password"), class: "btn btn-primary" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
