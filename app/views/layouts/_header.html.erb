<header>
  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button">
          <i class="fas fa-bars"></i>
        </a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <%= link_to root_path do %>
          <div class="nav-link"> <%= t "static_pages.home.heading" %></div>
        <% end %>
      </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <%= link_to image_tag("america.jpg", alt: "language_logo"),
          locale: "en" %>
        <%= link_to image_tag("vietnam.jpg", alt: "language_logo"),
          locale: "vi" %>
      </li>
      <li class="nav-link">
        <% if logged_in? %>
          <%= link_to t(".logout"), logout_path, method: :delete %>
        <% elsif %>
          <%= link_to t(".login"), login_path %>
        <% end %>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-widget="control-sidebar" data-slide="true"
          href="#" role="button"><i class="fas fa-th-large"></i></a>
      </li>
    </ul>
  </nav>
  <!-- /.navbar -->
</header>
